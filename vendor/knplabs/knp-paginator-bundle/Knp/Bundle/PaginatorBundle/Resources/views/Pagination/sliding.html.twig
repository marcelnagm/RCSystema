{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
<div class="pagination-link">
    {% if first is defined and current != first %}
        <div class="first item" >
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">&LeftArrowBar;</a>
        </div>
    {% endif %}

    {% if previous is defined %}
        <div class="previous item">
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&leftarrow;</a>
        </div>
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <div class="page item">
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </div>
        {% else %}
            <div class="current item">{{ page }}</div>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
        <div class="next item">
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">&RightArrow;</a>
        </div>
    {% endif %}

    {% if last is defined and current != last %}
        <div class="last item">
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">&RightArrowBar;</a>
        </div>
    {% endif %}
</div>
{% endif %}
