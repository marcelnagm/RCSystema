{% extends '::base.html.twig' %}

{% block content %}
    <h1>TbEntry list</h1>

 <table class="table table-bordered  table-extra-bordered">
        <thead>
            <tr>
                 <th class="table-extra-bordered">Id</th>
                 <th class="table-extra-bordered">Description</th>
                 <th class="table-extra-bordered">Deliver</th>
                 <th class="table-extra-bordered">Datein</th>
                 <th class="table-extra-bordered">Userin</th>             
                 <th class="table-extra-bordered">Actions</th>
            </tr>
        </thead>
       <tbody class="table-extra-bordered">
        {% for entity in pagination %}
            <tr class="table-hover table-extra-bordered">
                <td><a href="{{ path('tb_entry_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.idDeliver }}</td>
                <td>{% if entity.dateIn %}{{ entity.dateIn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.userIn }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tb_entry_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tb_entry_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('tb_entry_delete', { 'id': entity.id }) }}">delete</a>
                    </li>
                    <li>
                        <a href="{{ path('tb_entry_add_stock', { 'id': entity.id }) }}">add entry</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tb_entry_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
