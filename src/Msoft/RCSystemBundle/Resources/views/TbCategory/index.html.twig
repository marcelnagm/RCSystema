              <tr class="table-hover table-extra-bordered">
                <td><a href="{{ path('tb_categorty_show', { 'id': entity.id }) }}">{{ entity.description }}</a></td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tb_categorty_show', { 'id': entity.id }) }}">show</a>
                    </li>
                     <li>
                        <a href="{{ path('tb_categorty_delete', { 'id': entity.id }) }}">delete</a>
                    </li>
                    <li>
                        <a href="{{ path('tb_categorty_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tb_categorty_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
