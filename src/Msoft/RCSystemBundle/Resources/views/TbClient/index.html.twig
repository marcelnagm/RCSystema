{% extends '::base.html.twig' %}

{% block content %}
    <h1>TbClient list</h1>

    <table class="table table-bordered  table-extra-bordered">
        <thead>
            <tr>
                  <th class="table-extra-bordered">Id</th>
                  <th class="table-extra-bordered">Documentid</th>
                  <th class="table-extra-bordered">Name</th>
                  <th class="table-extra-bordered">Cellphone</th>
                  <th class="table-extra-bordered">Address</th>
                  <th class="table-extra-bordered">Email</th>
                  <th class="table-extra-bordered">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
             <tr class="table-hover table-extra-bordered">
                <td><a href="{{ path('tb_client_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.documentId }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.cellphone }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tb_client_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tb_client_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('tb_client_delete', { 'id': entity.id }) }}">delete</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tb_client_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
