{% extends '::base.html.twig' %}

{% block content %}
    <h1>TbDeliver list</h1>

    <table class="table table-bordered  table-extra-bordered">
        <thead>
            <tr>
                 <th class="table-extra-bordered">Id</th>
                 <th class="table-extra-bordered">Description</th>
                 <th class="table-extra-bordered">Documentnumber</th>
                 <th class="table-extra-bordered">Contact</th>
                 <th class="table-extra-bordered">Location</th>
                 <th class="table-extra-bordered">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
           <tr class="table-hover table-extra-bordered">
                <td><a href="{{ path('tb_deliver_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.documentNumber }}</td>
                <td>{{ entity.contact }}</td>
                <td>{{ entity.location }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tb_deliver_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tb_deliver_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tb_deliver_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
